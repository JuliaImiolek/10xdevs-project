---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="border-b bg-background px-4 py-3" aria-label="Główna nawigacja">
      <div class="container mx-auto max-w-4xl flex gap-6">
        <a href="/" class="text-sm font-medium text-foreground hover:text-foreground/80 transition-colors">Strona główna</a>
        <a href="/generate" class="text-sm font-medium text-foreground hover:text-foreground/80 transition-colors">Generuj fiszki</a>
        <a href="/flashcards" class="text-sm font-medium text-foreground hover:text-foreground/80 transition-colors">Moje fiszki</a>
      </div>
    </nav>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
